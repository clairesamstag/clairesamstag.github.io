<body>
    <div class="container">
        <div class="header">
            <h1>The Hub</h1>
            <p>One hub. Infinite voices.</p>
        </div>

        <div class="search-section">
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Search news articles..." id="search-input">
                <button class="search-btn" id="search-btn">🔍</button>
            </div>
        </div>

        <div class="bookmarks-toggle">
            <button class="bookmark-btn" id="bookmarks-toggle">📑 View Bookmarks</button>
        </div>

        <div class="controls">
            <button class="category-btn active" data-category="general">Top Stories</button>
            <button class="category-btn" data-category="local">Local News</button>
            <button class="category-btn" data-category="politics">Politics</button>
            <button class="category-btn" data-category="technology">Technology</button>
            <button class="category-btn" data-category="business">Business</button>
            <button class="category-btn" data-category="sports">Sports</button>
            <button class="category-btn" data-category="entertainment">Entertainment</button>
            <button class="category-btn" data-category="health">Health</button>
        </div>

        <div id="loading" class="loading" style="display: none;">
            <div class="spinner"></div>
            <p>Loading latest news...</p>
        </div>

        <div id="error-message" class="error-message" style="display: none;">
            <h3>Unable to load news at the moment</h3>
            <p>Please check your internet connection and try again later.</p>
        </div>

        <div id="news-container" class="news-grid">
            <!-- News articles will be loaded here -->
        </div>

        <div id="no-results" class="no-results" style="display: none;">
            <h3>No articles found</h3>
            <p>Try selecting a different category or adjusting your search.</p>
        </div>

        <div id="recommendations" class="recommendations" style="display: none;">
            <h3>Recommended for You</h3>
            <div id="recommendations-content">
                <!-- Recommendations will be loaded here -->
            </div>
        </div>
    </div>

    <script>
        class NewsAggregator {
            constructor() {
                this.currentCategory = 'general';
                this.bookmarkedArticles = JSON.parse(localStorage.getItem('bookmarkedArticles') || '[]');
                this.viewedArticles = JSON.parse(localStorage.getItem('viewedArticles') || '[]');
                this.comments = JSON.parse(localStorage.getItem('articleComments') || '{}');
                this.searchQuery = '';
                this.showingBookmarks = false;
                
                this.init();
            }

            init() {
                this.setupEventListeners();
                this.loadSampleNews();
                this.updateBookmarksButton();
            }

            setupEventListeners() {
                // Category buttons
                const categoryButtons = document.querySelectorAll('.category-btn');
                categoryButtons.forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        this.setActiveCategory(e.target);
                        this.currentCategory = e.target.dataset.category;
                        this.showingBookmarks = false;
                        this.updateBookmarksButton();
                        this.loadNews();
                    });
                });

                // Search functionality
                const searchInput = document.getElementById('search-input');
                const searchBtn = document.getElementById('search-btn');
                
                searchBtn.addEventListener('click', () => this.performSearch());
                searchInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') this.performSearch();
                });

                // Bookmarks toggle
                const bookmarksToggle = document.getElementById('bookmarks-toggle');
                bookmarksToggle.addEventListener('click', () => this.toggleBookmarks());
            }

            setActiveCategory(activeBtn) {
                document.querySelectorAll('.category-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                activeBtn.classList.add('active');
            }

            performSearch() {
                this.searchQuery = document.getElementById('search-input').value.trim().toLowerCase();
                this.showingBookmarks = false;
                this.updateBookmarksButton();
                this.loadNews();
            }

            toggleBookmarks() {
                this.showingBookmarks = !this.showingBookmarks;
                this.updateBookmarksButton();
                
                if (this.showingBookmarks) {
                    this.displayNews(this.bookmarkedArticles);
                } else {
                    this.loadNews();
                }
            }

            updateBookmarksButton() {
                const button = document.getElementById('bookmarks-toggle');
                const count = this.bookmarkedArticles.length;
                
                if (this.showingBookmarks) {
                    button.textContent = `📰 Back to News`;
                    button.classList.add('active');
                } else {
                    button.textContent = `📑 View Bookmarks (${count})`;
                    button.classList.remove('active');
                }
            }

            toggleBookmark(article) {
                const index = this.bookmarkedArticles.findIndex(a => a.title === article.title);
                
                if (index > -1) {
                    this.bookmarkedArticles.splice(index, 1);
                } else {
                    this.bookmarkedArticles.push(article);
                }
                
                localStorage.setItem('bookmarkedArticles', JSON.stringify(this.bookmarkedArticles));
                this.updateBookmarksButton();
                
                // Update bookmark icon
                const bookmarkIcon = event.target.closest('.bookmark-icon');
                if (bookmarkIcon) {
                    bookmarkIcon.classList.toggle('bookmarked');
                }
            }

            trackArticleView(article) {
                const existingIndex = this.viewedArticles.findIndex(a => a.title === article.title);
                
                if (existingIndex > -1) {
                    this.viewedArticles.splice(existingIndex, 1);
                }
                
                this.viewedArticles.unshift(article);
                
                // Keep only last 10 viewed articles
                if (this.viewedArticles.length > 10) {
                    this.viewedArticles = this.viewedArticles.slice(0, 10);
                }
                
                localStorage.setItem('viewedArticles', JSON.stringify(this.viewedArticles));
                this.updateRecommendations();
            }

            shareArticle(article, platform) {
                const url = encodeURIComponent(article.url || window.location.href);
                const title = encodeURIComponent(article.title);
                
                let shareUrl;
                switch (platform) {
                    case 'twitter':
                        shareUrl = `https://twitter.com/intent/tweet?text=${title}&url=${url}`;
                        break;
                    case 'facebook':
                        shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                        break;
                    case 'linkedin':
                        shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${url}`;
                        break;
                }
                
                if (shareUrl) {
                    window.open(shareUrl, '_blank', 'width=600,height=400');
                }
            }

            toggleComments(articleTitle) {
                const commentsContent = document.querySelector(`[data-article="${this.escapeSelector(articleTitle)}"] .comments-content`);
                const toggle = document.querySelector(`[data-article="${this.escapeSelector(articleTitle)}"] .comments-toggle`);
                
                if (commentsContent.classList.contains('active')) {
                    commentsContent.classList.remove('active');
                    toggle.innerHTML = '💬 Show Comments (' + this.getCommentsCount(articleTitle) + ')';
                } else {
                    commentsContent.classList.add('active');
                    toggle.innerHTML = '💬 Hide Comments';
                    this.loadComments(articleTitle);
                }
            }

            addComment(articleTitle, commentText) {
                if (!commentText.trim()) return;

                if (!this.comments[articleTitle]) {
                    this.comments[articleTitle] = [];
                }

                const comment = {
                    id: Date.now(),
                    author: 'Reader ' + Math.floor(Math.random() * 1000),
                    text: commentText.trim(),
                    date: new Date().toISOString(),
                    likes: 0,
                    liked: false
                };

                this.comments[articleTitle].push(comment);
                localStorage.setItem('articleComments', JSON.stringify(this.comments));

                this.loadComments(articleTitle);
                
                // Clear the input
                const input = document.querySelector(`[data-article="${this.escapeSelector(articleTitle)}"] .comment-input`);
                if (input) input.value = '';

                // Update comments count
                this.updateCommentsCount(articleTitle);
            }

            loadComments(articleTitle) {
                const commentsList = document.querySelector(`[data-article="${this.escapeSelector(articleTitle)}"] .comments-list`);
                const comments = this.comments[articleTitle] || [];

                if (comments.length === 0) {
                    commentsList.innerHTML = '<p style="color: #9ca3af; font-size: 0.85rem; text-align: center; padding: 20px;">No comments yet. Be the first to share your thoughts!</p>';
                    return;
                }

                commentsList.innerHTML = comments
                    .sort((a, b) => new Date(b.date) - new Date(a.date))
                    .map(comment => `
                        <div class="comment-item">
                            <div class="comment-header">
                                <span class="comment-author">${comment.author}</span>
                                <span class="comment-date">${this.formatCommentDate(comment.date)}</span>
                            </div>
                            <div class="comment-text">${comment.text}</div>
                            <div class="comment-actions">
                                <button class="comment-action ${comment.liked ? 'liked' : ''}" onclick="newsAggregator.toggleCommentLike('${articleTitle}', ${comment.id})">
                                    👍 ${comment.likes}
                                </button>
                                <button class="comment-action" onclick="newsAggregator.reportComment('${articleTitle}', ${comment.id})">
                                    🚩 Report
                                </button>
                            </div>
                        </div>
                    `).join('');
            }

            toggleCommentLike(articleTitle, commentId) {
                if (!this.comments[articleTitle]) return;

                const comment = this.comments[articleTitle].find(c => c.id === commentId);
                if (!comment) return;

                if (comment.liked) {
                    comment.likes = Math.max(0, comment.likes - 1);
                    comment.liked = false;
                } else {
                    comment.likes += 1;
                    comment.liked = true;
                }

                localStorage.setItem('articleComments', JSON.stringify(this.comments));
                this.loadComments(articleTitle);
            }

            reportComment(articleTitle, commentId) {
                alert('Comment reported. Thank you for helping keep our community safe!');
                // In a real app, this would send the report to moderation
            }

            getCommentsCount(articleTitle) {
                return this.comments[articleTitle] ? this.comments[articleTitle].length : 0;
            }

            updateCommentsCount(articleTitle) {
                const toggle = document.querySelector(`[data-article="${this.escapeSelector(articleTitle)}"] .comments-toggle`);
                if (toggle && !toggle.innerHTML.includes('Hide')) {
                    toggle.innerHTML = '💬 Show Comments (' + this.getCommentsCount(articleTitle) + ')';
                }
            }

            formatCommentDate(dateString) {
                const date = new Date(dateString);
                const now = new Date();
                const diffInMinutes = Math.floor((now - date) / (1000 * 60));

                if (diffInMinutes < 1) return 'Just now';
                if (diffInMinutes < 60) return `${diffInMinutes}m ago`;
                if (diffInMinutes < 1440) return `${Math.floor(diffInMinutes / 60)}h ago`;
                return date.toLocaleDateString();
            }

            escapeSelector(str) {
                return str.replace(/[!"#$%&'()*+,.\/:;<=>?@[\\\]^`{|}~]/g, '\\$&');
            }

            showLoading() {
                document.getElementById('loading').style.display = 'block';
                document.getElementById('error-message').style.display = 'none';
                document.getElementById('no-results').style.display = 'none';
                document.getElementById('news-container').innerHTML = '';
            }

            hideLoading() {
                document.getElementById('loading').style.display = 'none';
            }

            showError() {
                document.getElementById('error-message').style.display = 'block';
                this.hideLoading();
            }

            showNoResults() {
                document.getElementById('no-results').style.display = 'block';
                this.hideLoading();
            }

            async loadNews() {
                this.showLoading();

                try {
                    setTimeout(() => {
                        this.loadSampleNews();
                    }, 1000);
                } catch (error) {
                    console.error('Error loading news:', error);
                    this.showError();
                }
            }

            loadSampleNews() {
                const sampleArticles = this.getSampleArticles(this.currentCategory);
                let filteredArticles = sampleArticles;

                // Apply search filter
                if (this.searchQuery) {
                    filteredArticles = sampleArticles.filter(article =>
                        article.title.toLowerCase().includes(this.searchQuery) ||
                        article.description.toLowerCase().includes(this.searchQuery) ||
                        article.source.name.toLowerCase().includes(this.searchQuery)
                    );
                }

                this.displayNews(filteredArticles);
            }

