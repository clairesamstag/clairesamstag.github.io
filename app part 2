            displayNews(articles) {
                const container = document.getElementById('news-container');
                
                if (!articles || articles.length === 0) {
                    this.showNoResults();
                    return;
                }

                container.innerHTML = '';
                this.hideLoading();

                articles.forEach((article, index) => {
                    const newsCard = this.createNewsCard(article);
                    newsCard.style.animationDelay = `${index * 0.1}s`;
                    container.appendChild(newsCard);
                });

                this.updateRecommendations();
            }

            createNewsCard(article) {
                const card = document.createElement('div');
                card.className = 'news-card';
                
                const publishedDate = new Date(article.publishedAt).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                const isBookmarked = this.bookmarkedArticles.some(a => a.title === article.title);
                const commentsCount = this.getCommentsCount(article.title);
                const articleId = article.title.replace(/[^a-zA-Z0-9]/g, '_');

                card.innerHTML = `
                    <button class="bookmark-icon ${isBookmarked ? 'bookmarked' : ''}" onclick="newsAggregator.toggleBookmark(${JSON.stringify(article).replace(/"/g, '&quot;')})">
                        ⭐
                    </button>
                    ${article.urlToImage ? `<img src="${article.urlToImage}" alt="${article.title}" class="news-image" onerror="this.style.display='none'">` : ''}
                    <div class="news-content">
                        <div class="news-source">${article.source.name}</div>
                        <h3 class="news-title">${article.title}</h3>
                        <p class="news-description">${article.description || 'No description available.'}</p>
                        <div class="social-sharing">
                            <button class="share-btn share-twitter" onclick="newsAggregator.shareArticle(${JSON.stringify(article).replace(/"/g, '&quot;')}, 'twitter')" title="Share on Twitter">🐦</button>
                            <button class="share-btn share-facebook" onclick="newsAggregator.shareArticle(${JSON.stringify(article).replace(/"/g, '&quot;')}, 'facebook')" title="Share on Facebook">📘</button>
                            <button class="share-btn share-linkedin" onclick="newsAggregator.shareArticle(${JSON.stringify(article).replace(/"/g, '&quot;')}, 'linkedin')" title="Share on LinkedIn">💼</button>
                        </div>
                        <div class="news-footer">
                            <span class="news-date">${publishedDate}</span>
                            <a href="${article.url}" target="_blank" rel="noopener noreferrer" class="read-more" onclick="newsAggregator.trackArticleView(${JSON.stringify(article).replace(/"/g, '&quot;')})">Read More</a>
                        </div>
                        <div class="comments-section" data-article="${articleId}">
                            <button class="comments-toggle" onclick="newsAggregator.toggleComments('${article.title.replace(/'/g, "\\'")}')">
                                💬 Show Comments (${commentsCount})
                            </button>
                            <div class="comments-content">
                                <div class="comment-form">
                                    <textarea class="comment-input" placeholder="Share your thoughts on this article..."></textarea>
                                    <button class="comment-submit" onclick="newsAggregator.addComment('${article.title.replace(/'/g, "\\'")}', this.previousElementSibling.value)">Post</button>
                                </div>
                                <div class="comments-list">
                                    <!-- Comments will be loaded here -->
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                return card;
            }

            updateRecommendations() {
                const recommendationsSection = document.getElementById('recommendations');
                const recommendationsContent = document.getElementById('recommendations-content');
                
                if (this.viewedArticles.length === 0 || this.showingBookmarks) {
                    recommendationsSection.style.display = 'none';
                    return;
                }

                // Generate recommendations based on viewed articles' categories and sources
                const allArticles = Object.values(this.getSampleArticles('all')).flat();
                const viewedCategories = this.viewedArticles.map(a => this.getCategoryForArticle(a));
                const viewedSources = this.viewedArticles.map(a => a.source.name);

                const recommendations = allArticles
                    .filter(article => !this.viewedArticles.some(viewed => viewed.title === article.title))
                    .filter(article => 
                        viewedCategories.includes(this.getCategoryForArticle(article)) ||
                        viewedSources.includes(article.source.name)
                    )
                    .slice(0, 3);

                if (recommendations.length === 0) {
                    recommendationsSection.style.display = 'none';
                    return;
                }

                recommendationsContent.innerHTML = '';
                recommendations.forEach(article => {
                    const item = document.createElement('div');
                    item.className = 'recommendation-item';
                    item.onclick = () => {
                        this.trackArticleView(article);
                        window.open(article.url, '_blank');
                    };
                    
                    item.innerHTML = `
                        ${article.urlToImage ? `<img src="${article.urlToImage}" alt="${article.title}" class="recommendation-image">` : '<div class="recommendation-image"></div>'}
                        <div class="recommendation-content">
                            <h4>${article.title}</h4>
                            <div class="recommendation-source">${article.source.name}</div>
                        </div>
                    `;
                    
                    recommendationsContent.appendChild(item);
                });

                recommendationsSection.style.display = 'block';
            }

            getCategoryForArticle(article) {
                // Simple category detection based on article content
                const title = article.title.toLowerCase();
                const description = article.description.toLowerCase();
                
                if (title.includes('politic') || title.includes('congress') || title.includes('government')) return 'politics';
                if (title.includes('tech') || title.includes('ai') || title.includes('computer')) return 'technology';
                if (title.includes('business') || title.includes('market') || title.includes('stock')) return 'business';
                if (title.includes('sport') || title.includes('game') || title.includes('team')) return 'sports';
                if (title.includes('health') || title.includes('medical') || title.includes('doctor')) return 'health';
                if (title.includes('entertainment') || title.includes('movie') || title.includes('music')) return 'entertainment';
                if (title.includes('local') || title.includes('community') || title.includes('city')) return 'local';
                
                return 'general';
            }
        }

        // Initialize the news aggregator when the page loads
        let newsAggregator;
        document.addEventListener('DOMContentLoaded', () => {
            newsAggregator = new NewsAggregator();
        });
    </script>
</body>
</html>
